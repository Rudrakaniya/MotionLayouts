<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="200">

        <OnClick motion:targetId="@+id/locationButtonLayout" />
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/imgLocation_A"
               motion:framePosition="0"
               android:scaleX="1"
               android:scaleY="1" />
           <KeyAttribute
               motion:motionTarget="@+id/imgLocation_A"
               motion:framePosition="20"
               android:scaleX="1.2"
               android:scaleY="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/imgLocation_A"
               motion:framePosition="90"
               android:scaleX="1"
               android:scaleY="1" />
           <KeyAttribute
               motion:motionTarget="@+id/imgLocation_A"
               motion:framePosition="100"
               android:scaleX="1"
               android:scaleY="1" />


           <KeyAttribute
               motion:motionTarget="@+id/imgLocation_B"
               motion:framePosition="0"
               android:scaleX="1"
               android:scaleY="1" />
           <KeyAttribute
               motion:motionTarget="@+id/imgLocation_B"
               motion:framePosition="20"
               android:scaleX="1.1"
               android:scaleY="1.1" />
           <KeyAttribute
               motion:motionTarget="@+id/imgLocation_B"
               motion:framePosition="90"
               android:scaleX="1"
               android:scaleY="1" />
           <KeyAttribute
               motion:motionTarget="@+id/imgLocation_B"
               motion:framePosition="100"
               android:scaleX="1"
               android:scaleY="1" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>